################################################################################
# SITE CONFIG
################################################################################

export site_config_name=$(basename -- "$(readlink -f -- "$0" "$BASH_SOURCE")")

# GENERAL CONFIG
export localTenadevDir=$HOME/voices-adapters-v3
export localInstallPath=$localTenadevDir/INSTALL
export localTenaPath=$HOME/TENA
export tdcsInstallPath=$localTenaPath
export voicesPocPath=$HOME/voices-poc
export localCarlaPath=$HOME/Downloads/MCity-CARLA_0.9.10-dirty-fixed_signID/MCity-CARLA_0.9.10-dirty-fixed_signID
export localAddress='192.168.55.236'

# CARLA CONFIG
export carla_render_api=vulkan # vulkan or opengl
export carla_quality=Epic # Epic or Low

# LOGGING CONFIG
export logFilesRoot=$voicesPocPath/logs
export localAdapterLogPath=$voicesPocPath/logs/local_adapter_logs
export localCarmaSimLogPath=$voicesPocPath/logs/carma_sim_logs

# CARLA ADAPTER CONFIG
export simId='CARLA-TFHRC-L'

# MANUAL VEHICLE CONFIG
export vehicleID='TFHRC-MAN-L'

# CARMA PLATFORM ADAPTER CONFIG
export carmaID='TFHRC-CAR-L'

# CARLA TENA ADAPTER
export carlaAddress=$localAddress

# TENA J2735 ADAPTER
export j2735AdapterSendAddress=$localAddress
export j2735AdapterSendPort='5398'
export j2735AdapterReceiveAddress=$localAddress
export j2735AdapterReceivePort='56700'

# SCENARIO CONFIG
export scenario_config_path=$voicesPocPath/config/scenario_config
export scenario_config_file=pilot2_event0-local.config

. $scenario_config_path/$scenario_config_file